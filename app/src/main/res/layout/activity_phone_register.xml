<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/view_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/icon_back_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <ImageView
            android:id="@+id/ic_app_icon"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/view_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/icon_launcher"/>

        <TextView
            android:id="@+id/tv_hint_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_phone_number"
            app:layout_constraintTop_toBottomOf="@+id/ic_app_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginStart="45dp"/>
        
        
        <LinearLayout
            android:id="@+id/ll_area"
            android:orientation="horizontal"
            android:layout_marginStart="45dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_hint_phone_number"
            app:layout_constraintLeft_toLeftOf="parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:text="+86"/>

            <View
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_width="6dp"
                android:layout_height="4dp"
                android:background="@mipmap/icon_phone_drop_down" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_phone_number"
            app:layout_constraintLeft_toRightOf="@+id/ll_area"
            app:layout_constraintTop_toTopOf="@+id/ll_area"
            app:layout_constraintBottom_toBottomOf="@+id/ll_area"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="@string/hint_input_phone_format"
            android:textColorHint="@color/hint"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textSize="20sp"
            android:letterSpacing="0.12"
            android:textCursorDrawable="@drawable/color_edit_text_cursor"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:gravity="center_vertical"
            android:maxLength="11"
            android:layout_marginEnd="45dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tv_get_verify_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="@string/text_get_verification_code"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/et_phone_number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/selector_main_button_background" />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>